{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "skipLibCheck": true,
      "noEmit": true,
      "types": ["chrome", "node"],
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["src/**/*", "vite.config.ts"]
  }
  